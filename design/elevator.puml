@startuml

class ElevatorController {
- currentFloor: int
- destinationFloor: int
- currentElevatorState: ElevatorState
- elevatorMotor: ElevatorMotor
- doorMotor: DoorMotor
+ <<final>> MAX_FLOOR: int
+ {static} <<final>> DEFAULT_FLOOR: int
