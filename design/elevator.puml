+ onFloorButtonPressed(floor: int): void
+ onOpenButtonPressed(): void
+ opCloseButtonPressed(): void
+ onFloorReached(): void
+ onDoorOpen(): void
+ onDoorClose(): void
+ onDoorBlock():void
